generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String        @id @default(cuid())
  email       String        @unique
  username    String?       @unique
  name        String?
  firstName   String?       @default("")
  lastName    String?       @default("")
  createdAt   DateTime      @default(now())
  role        String        @default("buyer")
  avatar      String?
  bio         String?
  location    String?
  banner      String?
  bannerAspectRatio Float?
  isVerified  Boolean       @default(false)
  kycStatus   String        @default("pending")
  
  // Privacy & Social
  acceptOnlyFromFollowed Boolean @default(false)
  showFollowers          Boolean @default(true)
  showFollowing          Boolean @default(true)

  // Social
  followers   Follow[]      @relation("Following")
  following   Follow[]      @relation("Follower")
  blocks      Block[]       @relation("Blocker")
  blockedBy   Block[]       @relation("Blocked")

  services    Service[]
  appointments Appointment[]
  conversations Conversation[] @relation("UserConversations")
  sentMessages     Message[]      @relation("SentMessages")
  receivedMessages Message[]      @relation("ReceivedMessages")
}

model Follow {
  id          String   @id @default(cuid())
  follower    User     @relation("Follower", fields: [followerId], references: [id])
  followerId  String
  following   User     @relation("Following", fields: [followingId], references: [id])
  followingId String
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
}

model Block {
  id        String   @id @default(cuid())
  blocker   User     @relation("Blocker", fields: [blockerId], references: [id])
  blockerId String
  blocked   User     @relation("Blocked", fields: [blockedId], references: [id])
  blockedId String
  createdAt DateTime @default(now())

  @@unique([blockerId, blockedId])
}

model Conversation {
  id             String    @id @default(cuid())
  participantIds String[]
  participants   User[]    @relation("UserConversations")
  messages       Message[]
  lastMessageAt  DateTime  @default(now())
  createdAt      DateTime  @default(now())
  status         String    @default("active") // active, request, archived
}

model Message {
  id             String       @id @default(cuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String
  sender         User         @relation("SentMessages", fields: [senderId], references: [id])
  senderId       String
  receiver       User         @relation("ReceivedMessages", fields: [receiverId], references: [id])
  receiverId     String
  content        String
  fileUrl        String?
  fileType       String?
  read           Boolean      @default(false)
  createdAt      DateTime     @default(now())
}

model Service {
  id          String        @id @default(cuid())
  title       String
  description String?
  price       Int
  duration    Int           @default(60)
  category    String        @default("General")
  images      String[]
  isActive    Boolean       @default(true)
  seller      User          @relation(fields: [sellerId], references: [id])
  sellerId    String
  createdAt   DateTime      @default(now())
  appointments Appointment[]
}

model Appointment {
  id        String   @id @default(cuid())
  service   Service  @relation(fields: [serviceId], references: [id])
  serviceId String
  buyer     User     @relation(fields: [buyerId], references: [id])
  buyerId   String
  datetime  DateTime
  status    String   @default("pending")
  createdAt DateTime @default(now())
}
